{
    "compilerOptions": {
      "target": "es2016",
      "module": "commonjs",
      "rootDir": "./src",
      "outDir": "./out",
      "esModuleInterop": true,
      "forceConsistentCasingInFileNames": true,  
      "strict": true,
      "skipLibCheck": true,
      "resolveJsonModule": true,
      "noImplicitAny": true,
      "typeRoots": ["./types"]
    },
    "include": ["./src/", "./public"],
    "exclude": ["node_modules", "out"],
    "ts-node": {
      "esm": true
    }
  }